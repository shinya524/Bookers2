<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
  </ul>
<% end %>


<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>

  <label class = "inputTitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %><br>

  <label class = "inputOpinion">Opinion</label><br>
  <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion" %><br>

  <%= f.submit "Update Book" %><br>

  <%= link_to "Show", book_path %>
  <%= link_to 'Back', books_path %>

  <% end %>