<div class ="row">

  <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this obj from being saved:
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
      </ul>
      <% end %>

    <%= form_with model: @book do |f| %>
      <div class ="form-group">
        <label class = "inputTitle">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %><br>
      </div>
      <div class ="form-group">
        <label class = "inputOpinion">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion" %><br>
      </div>
      <div class ="form-group">
        <%= f.submit "Update Book", class: "btn btn-success" do %><br>
        <% end %>
      </div>
    <% end %>

    <%= link_to 'Show', book_path %>
    |
    <%= link_to 'Back', books_path %>
  </div>
</div>
