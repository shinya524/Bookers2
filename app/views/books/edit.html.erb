<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>

  <label class = "inputTitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %><br>

  <label class = "inputOpinion">Opinion</label><br>
  <%= f.text_area :Opinion, autofocus: true, id:"inputOpinion", placeholder:"Opinion" %><br>

  <%= f.submit "Update Book" %><br>

  <%= link_to "Show", book_path %>
  <%= link_to 'Back', user_path(current_user.id) %>

  <% end %>