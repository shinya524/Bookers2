<div class ="row">
<div class ="col-md-3">
  <h2>User info</h2>
    <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
    <table class ="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @book.user.introduction %></th>
        </tr>
      </tbody>
    </table>

  　<div>
      <%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

  <%= render 'new', book: @books %>
</div>

<div class ="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class ="table table-hover table-inverse">
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
        <%= link_to user_path(@users.id) do %><%= @users.name %><% end %></td>
        <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
        <td><%= @book.body %></td>

        <% if @book.user == current_user %>
        <td>
          <p class="btn btn-sm btn-success">
          <%= link_to "Edit", edit_book_path(@book.id) %>
          </p>
        </td>
        <td>
          <p class ="btn btn-sm btn-danger">
            <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" =>"本当に削除しますか？" %>
          </p>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
</div>

