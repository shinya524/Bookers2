<h1>Book detail</h1>

<div>

  <p>image:<%= image_tag 'no_image.jpg' %></p>
  <p>name:<%= @book.user.name %></p>
  <p>Title:<%= link_to book_path(@book.id) do %><%= @book.title %><% end %></p>
  <p>Opinion:<%= @book.body %></p>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>
</div>