<!--ユーザー編集画面-->
<div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>
      <form enctype ="multipart/form-data" accept-chaset ="UTF-8" method ="post">
        <%= form_with model: @user do |f| %>
        <div class ="form-group">
          <label class = "inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %><br>
        </div>
        <div class ="form-group">
          <label class = "inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %><br>
        </div>
        <div class ="form-group">
          <label class = "inputIntroduction">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %><br>
        </div>
        <div class ="form-group">
          <%= f.submit "Update User" %>
        </div>
       <% end %>
    </form>
</div>